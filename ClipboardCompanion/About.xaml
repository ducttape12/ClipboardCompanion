<Window x:Class="ClipboardCompanion.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardCompanion"
        xmlns:props="clr-namespace:ClipboardCompanion.Properties"
        mc:Ignorable="d"
        Title="About" Height="345.763" Width="404.873" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <TextBlock>
            <TextBlock.Text>
                <Binding Mode="OneTime" Source="{x:Static props:Resources.ApplicationName}" />
            </TextBlock.Text>
        </TextBlock>
        <TextBlock>
            <TextBlock.Text>
                <Binding Mode="OneTime" Source="{x:Static props:Resources.ApplicationVersion}" />
            </TextBlock.Text>
        </TextBlock>
        <TextBlock>
            <TextBlock.Text>
                <Binding Mode="OneTime" Source="{x:Static props:Resources.License}" />
            </TextBlock.Text>
        </TextBlock>
        <Button x:Name="VisitWebsite" Content="{x:Static props:Resources.WebsiteDescription}" Click="VisitWebsite_Click" />
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Ok" Click="Ok_Click" >_OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
