<local:BaseUserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClipboardCompanion.Views"
             xmlns:ViewModels="clr-namespace:ClipboardCompanion.ViewModels" x:Class="ClipboardCompanion.Views.OptionsUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!--<UserControl.DataContext>
        <ViewModels:OptionsViewModel/>
    </UserControl.DataContext>-->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <CheckBox Grid.Row="0" Content="Minimize to Tray" IsChecked="{Binding MinimizeToTray}" VerticalAlignment="Center" />
        <CheckBox Grid.Row="1" Content="Always Show Tray Icon" IsChecked="{Binding AlwaysShowTrayIcon}" VerticalAlignment="Center" />
        <CheckBox Grid.Row="2" Content="Start Minimized" IsChecked="{Binding StartMinimized}" VerticalAlignment="Center" />
    </Grid>
</local:BaseUserControl>
