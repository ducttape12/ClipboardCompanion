<local:BaseCompanionControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClipboardCompanion.Views"
             xmlns:ViewModels="clr-namespace:ClipboardCompanion.ViewModels" x:Class="ClipboardCompanion.Views.TextCleanerCompanionControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!--<UserControl.DataContext>
        <ViewModels:TextCleanerCompanionViewModel/>
    </UserControl.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <local:SharedCompanionControl Grid.Row="0" DataContext="{Binding}" />

        <GroupBox Header="Configuration" Grid.Row="1" IsEnabled="{Binding IsEnabled}" Margin="25 0 25 15" Padding="5" >
            <CheckBox Content="_Trim Text" IsChecked="{Binding Trim}"/>
        </GroupBox>
    </Grid>
</local:BaseCompanionControl>
