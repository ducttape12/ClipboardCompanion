<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClipboardCompanion.Views"
             xmlns:ViewModels="clr-namespace:ClipboardCompanion.ViewModels" x:Class="ClipboardCompanion.Views.OptionsCompanionControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <!--<UserControl.DataContext>
        <ViewModels:OptionsViewModel/>
    </UserControl.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <CheckBox Grid.Row="0" Content="Minimize to Tray" IsChecked="{Binding MinimizeToTray}" />
        <CheckBox Grid.Row="1" Content="Always Show Tray Icon" IsChecked="{Binding AlwaysShowTrayIcon}" />
        <CheckBox Grid.Row="2" Content="Start Minimized" IsChecked="{Binding StartMinimized}" />
    </Grid>
</UserControl>
